<%- include('../includes/head') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation') %>
  <main>
    <form class="product-form" action="<%=action%>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>">
      </div>
      <div class="form-control">
        <label for="title">Image Url</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : '' %>">
      </div>
      <div class="form-control">
        <label for="title">Price</label>
        <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : '' %>">
      </div>
      <div class="form-control">
        <label for="title">Description</label>
        <textarea name="description" id="description" rows="5"><%= editing ? product.description : '' %></textarea>
      </div>
      <input type="hidden" name="id" value="<%= editing ? product._id : '' %>">
      <button class="btn" type="submit"><%= editing ? "Update" : "Add" %> Product</button>
    </form>
  </main>
<%- include('../includes/end') %>
